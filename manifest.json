{
	"manifest_version": 2.0,
	"id": "hostvariable",
	"type": "widget",
	"name": "Host navigator",
	"namespace": "HostVariable",
	"version": "1.0",
	"author": "monzphere.com",
	"description": "Displays host hierarchy with ability to control other widgets based on selected host.",
	"url": "https://monzphere.com",
	"widget": {
		"size": {
			"width": 12,
			"height": 5
		},
		"js_class": "CustomWidgetHostNavigator",
		"in": {
			"groupids": {
				"type": "_hostgroupid"
			}
		},
		"out": [
			{
				"type": "_hostid"
			},
			{
				"type": "_hostids"
			}
		]
	},
	"actions": {
		"widget.hostvariable.view": {
			"class": "WidgetView"
		}
	},
	"assets": {
		"js": ["class.host-select-dropdown.js", "class.widget.js"],
		"css": ["style.css"]
	}
}
